<instance format="XCSP3" type="COP">
  <variables>
    <array id="s" note="s[i] is the starting time of the ith task (moving the ith item of furniture)" size="[4]"> 0..160 </array>
    <array id="e" note="e[i] is the ending time of the ith task" size="[4]"> 0..320 </array>
    <var id="k" note="k is the number of required persons"> 0..3 </var>
    <array id="aux_gb" note="aux_gb[i] is the ith auxiliary variable having been automatically introduced" size="[1]"> 0..320 </array>
  </variables>
  <constraints>
    <cumulative>
      <origins> s[] </origins>
      <lengths> 30 10 15 15 </lengths>
      <heights> 3 1 3 2 </heights>
      <condition> (le,k) </condition>
    </cumulative>
    <group note="setting end times">
      <intension> eq(%0,add(%1,%2)) </intension>
      <args> e[0] s[0] 30 </args>
      <args> e[1] s[1] 10 </args>
      <args> e[2] s[2] 15 </args>
      <args> e[3] s[3] 15 </args>
    </group>
    <maximum>
      <list> e[] </list>
      <condition> (eq,aux_gb[0]) </condition>
    </maximum>
  </constraints>
  <objectives>
    <minimize> add(mul(aux_gb[0],10),k) </minimize>
  </objectives>
</instance>
